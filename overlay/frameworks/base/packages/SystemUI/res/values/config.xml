<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>

    <!-- Control whether status bar should distinguish HSPA data icon from UMTS
    data icon on devices -->
    <bool name="config_hspa_data_distinguishable">true</bool>

    <!-- Vibration duration for MultiWaveView used in SearchPanelView -->
    <integer translatable="false" name="config_search_panel_view_vibration_duration">10</integer>

    <!-- Should "4G" be shown instead of "LTE" when the network is NETWORK_TYPE_LTE? -->
    <bool name="config_show4GForLTE">false</bool>

    <!-- Max visible notification icons -->
    <integer name="config_maxVisibleNotificationIcons">9</integer>
    <integer name="config_maxVisibleNotificationIconsWhenDark">10</integer>
    <!-- TODO: Doesn't change anything... -->
    <integer name="status_bar_config_maxNotificationIcons">5</integer>

    <!-- The number of columns in the QuickSettings -->
    <integer name="quick_settings_num_columns">6</integer>

    <!-- The maximum number of rows in the QuickSettings -->
    <!-- Needs to be 4, as useQsMediaPlayer always returns true
         and reduces the number from 3 to 2 already. -->
    <integer name="quick_settings_max_rows">4</integer>

    <!-- The default tiles to display in QuickSettings -->
    <string name="quick_settings_tiles_default" translatable="false">
        wifi,cell,bt,dnd,flashlight,rotation,battery,location,airplane,cast,hotspot,inversion,saver,dark,work,night,screenrecord,reverse
    </string>

    <!-- Whether or not we show the number in the bar. -->
    <bool name="config_statusBarShowNumber">true</bool>

    <!-- The maximum count of notifications on Keyguard. The rest will be collapsed in an overflow
     card. -->
    <integer name="keyguard_max_notification_count">10</integer>
</resources>
